{
  "name": "p2p-wallet",
  "version": "1.0.0",
  "description": "A simple p2p wallet system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --w",
    "start": "tsc && ts-node dist/index.js",
    "serve": "tsc && ts-node-dev --respawn dist/index.js",
    "migrate": "knex migrate:latest --env production",
    "migrate:development": "knex migrate:latest --env development",
    "migrate:test": "knex migrate:latest --env test",
    "seed": "knex seed:run",
    "test": "cross-env APP_ENV=test jest --config --testTimeout=15000 --detectOpenHandles --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilejohn-official/p2p-wallet.git"
  },
  "author": "Opeyemi Ilesanmi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ilejohn-official/p2p-wallet/issues"
  },
  "homepage": "https://github.com/ilejohn-official/p2p-wallet#readme",
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.36",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.1.0",
    "pg": "^8.7.3",
    "typescript": "^4.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.5.1",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.3",
    "ts-node-dev": "^2.0.0"
  }
}
